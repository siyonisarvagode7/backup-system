# backup.config
# Destination directory for backups (will be created if missing)
BACKUP_DESTINATION="./backups"

# Comma-separated exclude patterns (bash globs; relative to source dir)
EXCLUDE_PATTERNS=".git,node_modules,.cache"

# Keep counts
DAILY_KEEP=7
WEEKLY_KEEP=4
MONTHLY_KEEP=3

# Checksum algorithm: "sha256" or "md5"
CHECKSUM_ALGO="sha256"

# Optional email for notifications (not implemented SMTP; will write to email.txt if set)
NOTIFY_EMAIL=""

# Minimum free space required in MB before creating backup (0 disables check)
MIN_FREE_MB=100

# Lockfile path
LOCKFILE="/tmp/backup_system.lock"
